<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Cheerful Light Theme -->
    <style name="Theme.GroceryListApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Bright and cheerful primary colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>          <!-- Bright Orange -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>             <!-- Dark Orange -->
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>       <!-- White -->

        <!-- Warm secondary colors -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>       <!-- Amber -->
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>   <!-- Dark Amber -->
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>   <!-- White -->

        <!-- Light, bright surface colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>           <!-- Almost White -->
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>       <!-- Dark Gray -->
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item><!-- Very Light Gray -->
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item><!-- Medium Gray -->

        <!-- Light status bar -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightStatusBar">true</item>        <!-- Dark status bar text -->

        <!-- Light backgrounds -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>

        <!-- Disable window action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Light navigation bar -->
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <!-- windowLightNavigationBar removed - requires API 27, your min is 24 -->
    </style>

    <!-- Toolbar Theme - Light and Cheerful -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/md_theme_light_onPrimary</item>
        <item name="android:textColorSecondary">@color/md_theme_light_onPrimary</item>
        <item name="colorControlNormal">@color/md_theme_light_onPrimary</item>
        <item name="colorControlActivated">@color/md_theme_light_onPrimary</item>
    </style>

    <!-- Card Style - Bright and Clean -->
    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Button Style - Cheerful -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>